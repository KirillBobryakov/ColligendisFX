<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.web.WebView?>

<AnchorPane xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bkv.colligendis.colligendisfx.controllers.CoinInfoViewController">
   <children>
      <VBox AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <HBox>
               <children>
                  <AnchorPane fx:id="obversePane" prefHeight="400.0" prefWidth="200.0" style="-fx-border-width: 2; -fx-border-color: black;" HBox.hgrow="ALWAYS" />
                  <AnchorPane fx:id="reversePane" prefHeight="400.0" prefWidth="200.0" style="-fx-border-width: 2; -fx-border-color: black;" HBox.hgrow="ALWAYS" />
                  <AnchorPane fx:id="edgePane" prefHeight="400.0" prefWidth="200.0" style="-fx-border-width: 2; -fx-border-color: black;" HBox.hgrow="ALWAYS" />
                  <Pane fx:id="featuresPane" prefWidth="400.0" style="-fx-border-width: 2; -fx-border-color: black;" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
            <HBox prefHeight="500.0" VBox.vgrow="ALWAYS">
               <children>
                  <VBox fx:id="coinVariantsVBox" style="-fx-border-width: 2; -fx-border-color: black;" HBox.hgrow="ALWAYS" />
                  <WebView fx:id="descriptionWebView" minHeight="-1.0" minWidth="-1.0" prefHeight="-1.0" prefWidth="-1.0" style="-fx-border-width: 2; -fx-border-color: black;" HBox.hgrow="ALWAYS" />
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
